---
import '../styles/global.css'
import Analytics from '@vercel/analytics/astro'
import Header from '../components/Header.astro'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title || 'jarbcave.com'}</title>
		<slot name="head" />
	</head>
	<body class="bg-zinc-800 text-zinc-100">

		<Header />

		<main class="mt-10 w-full print:mt-0 px-4 py-2 lg:w-5xl mx-auto">
			<slot />
		</main>

		<footer class="py-20 text-sm flex opacity-70 w-full justify-center">
			<p>
				jarbcave.com Â© 2025 Todos los derechos reservados
			</p>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
